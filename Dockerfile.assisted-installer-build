FROM registry.access.redhat.com/ubi9/go-toolset:1.24 AS golang

ENV GOFLAGS=""

RUN go install github.com/golangci/golangci-lint/cmd/golangci-lint@v1.64.7 && \
  go install golang.org/x/tools/cmd/goimports@v0.1.0 && \
  go install github.com/onsi/ginkgo/ginkgo@v1.16.1 && \
  go install go.uber.org/mock/mockgen@v0.4.0 && \
  go install gotest.tools/gotestsum@v1.6.3 && \
  go install github.com/axw/gocov/gocov@v1.1.0 && \
  go install github.com/AlekSi/gocov-xml@v1.1.0

# Package installation stage with full UBI9 for external repositories access
# UBI9 version policy: See Dockerfile.assisted-installer for version selection rationale
FROM registry.access.redhat.com/ubi9/ubi:9.5 AS package-stage

RUN dnf install -y 'dnf-command(config-manager)' && \
    dnf config-manager --add-repo https://download.docker.com/linux/centos/docker-ce.repo && \
    dnf install -y \
        docker-ce \
        docker-ce-cli \
        containerd.io \
        docker-compose-plugin \
        make \
        git \
        openssl-devel \
        gcc \
    && dnf clean all

# Final stage with UBI9-minimal
# UBI9 version policy: See Dockerfile.assisted-installer for version selection rationale
FROM registry.access.redhat.com/ubi9/ubi-minimal:9.5

# Copy Docker tools and dependencies
COPY --from=package-stage /usr/bin/docker /usr/bin/docker
RUN mkdir -p /usr/libexec/docker/cli-plugins/
COPY --from=package-stage /usr/libexec/docker/cli-plugins/ /usr/libexec/docker/cli-plugins/
COPY --from=package-stage /usr/bin/containerd* /usr/bin/
COPY --from=package-stage /usr/bin/ctr /usr/bin/ctr
COPY --from=package-stage /usr/bin/runc /usr/bin/runc

# Copy essential libraries for Docker/development tools
COPY --from=package-stage /usr/bin/make /usr/bin/make
COPY --from=package-stage /usr/bin/git /usr/bin/git
COPY --from=package-stage /usr/bin/gcc /usr/bin/gcc
COPY --from=package-stage /lib64/libssl.so* /lib64/
COPY --from=package-stage /lib64/libcrypto.so* /lib64/
COPY --from=package-stage /usr/lib64/libstdc++.so* /usr/lib64/
COPY --from=package-stage /usr/lib/systemd/system/docker* /usr/lib/systemd/system/
COPY --from=package-stage /usr/lib/systemd/system/containerd* /usr/lib/systemd/system/

# Install minimal base packages needed for development and CI
RUN microdnf install -y tar gzip rsync which procps-ng findutils && microdnf clean all

ENV GOROOT=/usr/lib/golang
ENV GOPATH=/opt/app-root/src/go
ENV PATH=$PATH:$GOROOT/bin:$GOPATH/bin
# required due to issue https://github.com/docker/compose/issues/4060
ENV LANG=en_US.UTF-8

# Copy Go installation and tools from golang stage
COPY --from=golang /opt/app-root/src/go $GOPATH
COPY --from=golang /usr/lib/golang $GOROOT
COPY --from=golang /usr/bin/go* /usr/bin/

RUN chmod 775 -R $GOPATH && chmod 775 -R $GOROOT
