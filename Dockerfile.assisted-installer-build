# Install Go development tools
FROM registry.access.redhat.com/ubi9/go-toolset:1.24 AS golang

ENV GOFLAGS=""

RUN go install github.com/golangci/golangci-lint/cmd/golangci-lint@v1.64.7 && \
  go install golang.org/x/tools/cmd/goimports@v0.1.0 && \
  go install github.com/onsi/ginkgo/ginkgo@v1.16.1 && \
  go install go.uber.org/mock/mockgen@v0.4.0 && \
  go install gotest.tools/gotestsum@v1.6.3 && \
  go install github.com/axw/gocov/gocov@v1.1.0 && \
  go install github.com/AlekSi/gocov-xml@v1.1.0

# Install build tools and Docker in full UBI9 (needs external repos)
FROM registry.access.redhat.com/ubi9/ubi:9.5 AS build-tools

RUN dnf install -y 'dnf-command(config-manager)' && \
    dnf config-manager --add-repo https://download.docker.com/linux/centos/docker-ce.repo && \
    dnf install -y \
        docker-ce \
        docker-ce-cli \
        containerd.io \
        docker-compose-plugin \
        make \
        git \
        openssl-devel \
        gcc \
        tar \
        gzip \
        which \
        procps-ng \
        findutils \
        pkg-config \
        glibc-devel \
        libgcc \
    && dnf clean all

# Copy libraries with symlink resolution to avoid broken symlinks
RUN mkdir -p /tmp/libs && \
    cp -L /usr/lib64/libssl.so* /tmp/libs/ && \
    cp -L /usr/lib64/libcrypto.so* /tmp/libs/ && \
    cp -L /usr/lib64/libgcc_s.so* /tmp/libs/

# NOTE: UBI9 version 9.5 chosen as latest available stable release (Dec 2025)
FROM registry.access.redhat.com/ubi9/ubi-minimal:9.5

# Copy complete Go environment from golang stage
COPY --from=golang /usr/lib/golang /usr/lib/golang
COPY --from=golang /opt/app-root/src/go /opt/app-root/src/go

# Copy essential build tools and Docker from build-tools stage
COPY --from=build-tools /usr/bin/docker* /usr/bin/
COPY --from=build-tools /usr/bin/containerd* /usr/bin/
COPY --from=build-tools /usr/bin/ctr /usr/bin/
COPY --from=build-tools /usr/bin/runc /usr/bin/
COPY --from=build-tools /usr/bin/make /usr/bin/
COPY --from=build-tools /usr/bin/git /usr/bin/
COPY --from=build-tools /usr/bin/gcc /usr/bin/
COPY --from=build-tools /usr/bin/tar /usr/bin/
COPY --from=build-tools /usr/bin/gzip /usr/bin/
COPY --from=build-tools /usr/bin/which /usr/bin/
COPY --from=build-tools /usr/bin/ps /usr/bin/
COPY --from=build-tools /usr/bin/find /usr/bin/
COPY --from=build-tools /usr/bin/pkg-config /usr/bin/

# Copy essential libraries for CGO (with symlinks resolved)
COPY --from=build-tools /tmp/libs/* /usr/lib64/
COPY --from=build-tools /usr/include/openssl/ /usr/include/openssl/

# Copy Docker configuration and supporting files
COPY --from=build-tools /etc/docker/ /etc/docker/
COPY --from=build-tools /usr/libexec/docker/ /usr/libexec/docker/

ENV GOROOT=/usr/lib/golang
ENV GOPATH=/opt/app-root/src/go
ENV GOMODCACHE=$GOPATH/pkg/mod
ENV GOCACHE=$GOPATH/cache
ENV PATH=$PATH:$GOROOT/bin:$GOPATH/bin
# required due to issue https://github.com/docker/compose/issues/4060
ENV LANG=en_US.UTF-8

# Copy Go binaries from golang stage
COPY --from=golang /usr/bin/go* /usr/bin/

RUN chmod 775 -R $GOPATH && chmod 775 -R $GOROOT && \
    mkdir -p $GOMODCACHE $GOCACHE
